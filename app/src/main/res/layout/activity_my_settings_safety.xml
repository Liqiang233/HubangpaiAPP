<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Settings_PayActivity">




    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="425dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/settings_safety_button_phonenum"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="手机号" />

        <Button
            android:id="@+id/settings_safety_button_psdsetting"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="密码设置" />

        <Button
            android:id="@+id/settings_safety_button_mailsetting"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="邮箱设置" />

        <Button
            android:id="@+id/settings_safety_button_lognote"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="登陆记录查询" />

        <Button
            android:id="@+id/settings_safety_button_destory"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="注销账号" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>