<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task.MessionModifyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="任务名："
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/md_messionname"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/et_username"
            android:textColor="#000"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="任务类别："
            android:textColor="#000"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/md_messionclass"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/et_username"
            android:entries="@array/classes"
            ></Spinner>
        <TextView

            android:layout_width="120dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="任务地址："
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/md_messionaddress"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/et_username"
            android:textColor="#000"/>
<!--        <TextView-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:padding="5dp"-->
<!--            android:text="截止日期："-->
<!--            android:textColor="#000"-->
<!--            android:textSize="20dp" />-->

<!--        <EditText-->
<!--            android:id="@+id/md_messiondeadline"-->
<!--            android:layout_width="300dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:background="@drawable/et_username"-->
<!--            android:inputType="datetime"-->
<!--            android:textColor="#000"/>-->
        <LinearLayout
            android:id="@+id/ll2_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/current_time_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/current_time"
                android:textColor="@color/current_time_text"
                android:textSize="25sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv2_selected_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/selected_time_text"
                android:textSize="15sp" />

        </LinearLayout>
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="详细描述："
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/md_messiondetails"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:background="@drawable/et_username"
            android:textColor="#000"/>
        <TextView

            android:layout_width="200dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="报酬意向：（元）"
            android:textColor="#000"
            android:textSize="20dp" />



        <EditText
            android:id="@+id/md_messionpay"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/et_username"
            android:inputType="number"
            android:textColor="#000"/>


        <Button
            android:id="@+id/md_modify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/login_password"
            android:layout_marginTop="40dp"
            android:text="修改任务信息"
            android:textSize="20sp"
            android:background="@drawable/bt_login">

        </Button>
        <Button
            android:id="@+id/md_comple"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/login_password"
            android:layout_marginTop="40dp"
            android:text="完结任务"
            android:textSize="20sp"
            android:background="@drawable/bt_login">

        </Button>
    </LinearLayout>

</ScrollView>