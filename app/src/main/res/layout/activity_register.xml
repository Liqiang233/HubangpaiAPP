<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/register_button_return"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:text="返回"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/register_button_reg"
        android:layout_width="122dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:text="注册"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.773" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="407dp"
        android:layout_height="75dp"
        android:layout_marginTop="83dp"
        android:background="@drawable/biankuang"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_button_return">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号："
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_edittext_num"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang"
            android:textColor="#000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:background="@drawable/biankuang"
        android:orientation="horizontal"


        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="225dp">

        <EditText
            android:id="@+id/register_edittext_vrfcode"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/biankuang"
            android:textColor="#000"
            android:textSize="30dp" />

        <Button
            android:id="@+id/textView6"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#000"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="407dp"
        android:layout_height="75dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/biankuang"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"

        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="密码："
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_edittext_psw"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/biankuang"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="407dp"
        android:layout_height="75dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/biankuang"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/register_button_reg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认密码："
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_edittext_psw2"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/biankuang"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textSize="30dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>