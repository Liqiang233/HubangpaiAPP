<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".ui.home.LoginActivity">
    <EditText
        android:id="@+id/login_username"
        android:layout_marginTop="150dp"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#1AE6E6"
        android:background="@drawable/et_username"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:drawableLeft="@drawable/username"

        android:inputType="textPassword"

        android:hint="用户名">
    </EditText>
    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#1AE6E6"
        android:hint="密码"
        android:layout_below="@id/login_username"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:background="@drawable/et_username"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:drawableLeft="@drawable/password"
        >

    </EditText>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_password"
        android:layout_marginTop="88dp"
        android:background="@drawable/bt_login"
        android:text="登录"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/login_check_rememberpsd"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_below="@+id/login_password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="267dp"
        android:text="记住密码"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/login_check_autologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="103dp"
        android:text="自动登陆"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/login_textview_forgetpsw"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="235dp"
        android:text="忘记密码?"
        android:textColor="#8181F7"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/login_textview_register"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="105dp"
        android:text="没有账户，去注册"
        android:textColor="#8181F7"
        android:textSize="20sp" />

</RelativeLayout>