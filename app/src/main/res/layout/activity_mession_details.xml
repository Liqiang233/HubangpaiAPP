<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task.MessionDetailsActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="任务编号："
                android:textColor="#000"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/ac_messionid"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@drawable/et_username"
                android:textColor="#000"
                android:textSize="25dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="任务名："
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/ac_messionnname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/et_username"
            android:textColor="#000"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="任务类型："
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/ac_messionclass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/et_username"
            android:textColor="#000"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="发布人："
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/ac_messionninitiator"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/et_username"
            android:textColor="#000"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="任务地址："
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/ac_messionaddress"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/et_username"
            android:textColor="#000"
            android:textSize="25dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="发起时间："
                android:textColor="#000"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/ac_messionlaunchtime"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@drawable/et_username"
                android:textColor="#000"
                android:textSize="25dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="截止日期："
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/ac_messionndeadline"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/et_username"
            android:textColor="#000"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="任务状态："
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/ac_messionnstatus"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/et_username"
            android:textColor="#000"
            android:textSize="25dp" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="酬劳："
                android:textColor="#000"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/ac_messionpay"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:background="@drawable/et_username"
                android:textColor="#000"
                android:textSize="25dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="任务详情："
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/ac_messionndetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/et_username"
            android:textColor="#000"
            android:textSize="25dp" />
    </LinearLayout>
        <Button
            android:id="@+id/bt_accept"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/login_password"
            android:layout_marginTop="40dp"
            android:text="接受任务任务"
            android:textSize="20sp"
            android:background="@drawable/bt_login"
            ></Button>
    </LinearLayout>
</ScrollView>